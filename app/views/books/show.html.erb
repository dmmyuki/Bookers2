<main>
  <%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
    <div class="row">
    <%= render 'list', user: @user, book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to image_tag(@books.user.get_profile_image(100,100)), user_path(@books.user.id) %><br>
                <%= link_to @books.user.name, user_path(@books.user.id) %>
              </td>
              <td><%= link_to @books.title, book_path(@books.id) %></td>
              <td><%= @books.body %></td>
              <% if user_signed_in? && current_user.id==@books.user_id %>
              <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
              <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
