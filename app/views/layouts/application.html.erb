<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://kit.fontawesome.com/918e2fa4ca.js" crossorigin="anonymous"></script>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-link text-light">
                  <%= link_to user_path(current_user.id) do %>
                    <span class="fa-solid fa-house-chimney"></span>Home
                  <% end %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to users_path do %>
                    <span class="fa-solid fa-users"></span>Users
                  <% end %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to books_path do %>
                    <span class="fa-solid fa-book-open"></span>Books
                  <% end %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="fa-solid fa-right-from-bracket"></span>Log out
                  <% end %>
                </li>
              <% else %>
                <li class="nav-link text-light">
                  <%= link_to root_path do %>
                    <span class="fa-solid fa-house-chimney"></span>Home
                  <% end %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to about_path do %>
                    <span class="fa-solid fa-link"></span>About
                  <% end %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to new_user_registration_path do %>
                    <span class="fa-solid fa-user-plus"></span>Sign up
                  <% end %>
                </li>

                <li class="nav-link text-light">
                  <%= link_to new_user_session_path do %>
                    <span class="fa-solid fa-right-to-bracket"></span>Log in
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
